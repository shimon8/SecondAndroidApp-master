<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.controller.TravelActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="6dp">
    <TextView
        android:id="@+id/item_time"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/sourceAddress"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/endAddress"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />
    <TextView
        android:id="@+id/number"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />
    <TextView
        android:id="@+id/email"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />
    <Button
            android:id="@+id/TakeDrive"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="100px"
            android:layout_marginVertical="20px"
            android:background="@drawable/rounded_button"
            android:text="קח נסיעה"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <!--<Button-->
            <!--android:id="@+id/FinishDrive"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginHorizontal="100px"-->
            <!--android:layout_marginVertical="20px"-->
